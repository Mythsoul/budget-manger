    <!-- Hero Section -->
    <header class="hero">
        <div class="container d-flex flex-column flex-lg-row align-items-center justify-content-between py-5">
            <div class="hero-text">
                <h1 class="display-4">Take Control of Your <span class="typed">Finance</span></h1>
                <p class="lead">Our budget management app helps you track expenses, create budgets, and gain insights to reach your financial goals.</p>
                <a href="/register" class="btn btn-primary">Get Started</a>
            </div>
            <div class="hero-video">
                <iframe width="560" height="315" src="https://www.youtube.com/embed/dQw4w9WgXcQ" title="YouTube video player" frameborder="0" allowfullscreen></iframe>
            </div>
        </div>
    </header>

    <!-- Features Section -->
    <section id="features" class="features">
        <div class="container">
            <div class="row">
                <h2 class="text-center mb-4">Features</h2>
                <div class="col-md-4">
                        
                    <div class="feature">
                        
                        <h3>Expense Tracking</h3>
                        <p>Easily track your expenses and categorize them to better understand your spending habits.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature">
                        <h3>Budgeting</h3>
                        <p>Create customizable budgets and monitor your progress to stay on top of your finances.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature">
                        <h3>Reporting</h3>
                        <p>Generate detailed reports to gain insights into your spending and identify areas for improvement.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

   

    <!-- Feedback Section -->
    <section id="feedback" class="feedback">
        <div class="container">
            <h2>What Our Users Say</h2>
            <div class="feedback-item">
                <blockquote>
                    <p>"This budget app has been a game-changer for me. It's helped me stay on top of my expenses and reach my financial goals with ease."</p>
                    <footer>— Jane Doe, Financial Analyst</footer>
                </blockquote>
            </div>
            <div class="feedback-item">
                <blockquote>
                    <p>"I was struggling to keep track of my business expenses until I started using this budget app. It's made managing my finances so much easier."</p>
                    <footer>— John Smith, Small Business Owner</footer>
                </blockquote>
            </div>
        </div>
    </section>

     <!-- Contact Form Section -->
<section id="contact" class="contact-form">
    <div class="container">
        <h2 class="text-center mb-4">Contact Us</h2>
        <form>
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Your Name">
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <input type="email" class="form-control" id="email" placeholder="Your Email">
            </div>
            <div class="mb-3">
                <label for="message" class="form-label">Message</label>
                <textarea class="form-control" id="message" rows="3" placeholder="Your Message"></textarea>
            </div>
            <button type="submit" class="btn blue ">Send</button>
        </form>
    </div>
</section>

